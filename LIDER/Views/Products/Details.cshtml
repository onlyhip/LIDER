@{
    ViewBag.Title = "Details";
}

@{
    foreach (var j in Model.Pro)
    {
        <div>
            <ol class="breadcrumb">
                <li class="active">Home</li>
                <li class="active">Products</li>
                <li class="active">Details</li>
                <li class="active">@j.Name</li>
            </ol>
        </div>
    }
}


<div class="container">
    <!-- /.row -->
    <div class="row">
        <div class="col-md-3">
            <div>
                <a href="#" class="list-group-item active"><strong>CATEGORIES</strong></a>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a style="text-transform: uppercase" href="/Products/Categories/View-All">View-All</a>
                    </li>
                    @foreach (var item in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a style="text-transform: uppercase" href="/Products/Categories/@item.Name">@item.Name</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- /.div -->
            <!-- /.div -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="row">
                @foreach (var i in Model.Pro)
                {
                    <div class="col-md-8 text-center col-sm-8 col-xs-8">
                        <img src="@i.Img" alt="" />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4">
                        <div class="caption">
                            <br />
                            <br />
                            <h3><a>@i.Name</a></h3>
                            <h2><strong>$@i.Price</strong></h2>
                            <p>
                                <strong>Description :</strong>
                            </p>

                            <br />
                            <br />
                            <p>
                                <strong>Quality :</strong>

                                <input style="border: 1px solid #a19b9b;" size="4" max="9999" min="1" value="1" type="number" name="quantity" id="quantity" step="1">

                            </p>
                            <p>
                                <strong>Size : </strong>

                                <select style="width:40%">
                                    <option>S   </option>
                                    <option>M   </option>
                                    <option>L   </option>
                                </select>
                            </p>
                            <br />
                            <p><a href="#" class="btn btn-success" role="button">Add To Cart</a></p>
                        </div>
                    </div>
                }
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <div class="row">
        @{
            int pd = 0;
            foreach (var i in Model.Products)
            {
                if (pd < 4)
                {
                    <div class="col-md-3 text-center col-sm-6 col-xs-6">
                        <div class="thumbnail product-box">
                            <img src="@i.Img" alt="" />
                            <div class="caption">
                                <h5><a href="#">@i.Name </a></h5>
                                <h5><strong>$@i.Price</strong>  </h5>
                                <p><a href="/Products/Details/@i.ProductID" class="btn btn-success" role="button">&ensp;Buy Now&ensp;</a> <a href="/Products/Details/@i.ProductID" class="btn btn-primary" role="button">See Details</a></p>
                            </div>
                        </div>
                    </div>
                    pd++;
                }

            }
        }
    </div>

</div>
<!-- /.container -->
