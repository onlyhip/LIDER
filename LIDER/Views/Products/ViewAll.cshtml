@{
    ViewBag.Title = "View All";
}
<div>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li class="active">Products</li>
        <li class="active">View All</li>

    </ol>
</div>
<div class="container">
    <!-- /.row -->
    <div class="row">
        <div class="col-md-3">
            <div>
                <a href="#" class="list-group-item active"><strong>CATEGORY</strong></a>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a style="text-transform: uppercase" href="ViewAll">View All</a>
                    </li>
                    @foreach (var item in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a style="text-transform: uppercase" href="#">@item.Name</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- /.div -->
            <div class="text-center">
                @{
                    int ad = 0;
                    foreach (var item in Model.Products)
                    {
                        if (ad < 2)
                        {
                            if (item.Ranking == -1)
                            {
                                <div>
                                    <div class="offer-text2">
                                        HOT
                                    </div>
                                    <div class="thumbnail product-box">
                                        <img src="@item.Img" alt="" />
                                        <div class="caption">
                                            <h5><a href="#">@item.Name </a></h5>
                                            <h5><strong>$@item.Price</strong></h5>
                                            <p><a href="#" class="btn btn-success" role="button">Add To Cart</a> <a href="#" class="btn btn-primary" role="button">See Details</a></p>
                                        </div>
                                    </div>
                                    <!-- /.div -->


                                </div>

                                ad++;
                            }
                        }

                    }
                }

            </div>
            <!-- /.div -->

        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="row">
                <div class="btn-group alg-right-pad">
                    <button type="button" class="btn btn-default"><strong>1235  </strong>items</button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                            Sort Products &nbsp;
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">By Price Low</a></li>
                            <li class="divider"></li>
                            <li><a href="#">By Price High</a></li>
                            <li class="divider"></li>
                            <li><a href="#">By Popularity</a></li>
                            <li class="divider"></li>
                            <li><a href="#">By Reviews</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- /.col -->
                @{
                    int pd = 0;
                    foreach (var i in Model.Products)
                    {
                        if (pd < 9)
                        {
                            <div class="col-md-4 text-center col-sm-6 col-xs-6">
                                <div class="thumbnail product-box">
                                    <img src="@i.Img" alt="" />
                                    <div class="caption">
                                        <h5><a href="#">@i.Name </a></h5>
                                        <h5><strong>$@i.Price</strong>  </h5>
                                        <p><a href="#" class="btn btn-success" role="button">Add To Cart</a> <a href="#" class="btn btn-primary" role="button">See Details</a></p>
                                    </div>
                                </div>
                            </div>
                            pd++;
                        }

                    }
                }
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <ul class="pagination alg-right-pad">
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
