@model LIDER.ViewModels.ManageView

@{
    ViewBag.Title = "Delete Products";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>DELETE PRODUCTS</h2>

<h4>Are you sure you want to delete this?</h4>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProdDetails.ProductID)
            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ProdDetails.Name, new { htmlAttributes = new { @class = "form-control ", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ProdDetails.Price, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Img, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProdDetails.Img, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProdDetails.Description, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Meta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProdDetails.Meta, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Size, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ProdDetails.Size, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Color, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ProdDetails.Color, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Hide, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-1">
                    <div class="checkbox disabled">
                        @Html.EditorFor(model => model.ProdDetails.Hide)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Ranking, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-1">
                    @Html.EditorFor(model => model.ProdDetails.Ranking, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdDetails.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.ProdDetails.Category.Name, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="/Products/ManageProducts" class="btn btn-primary" role="button">Back To List</a>
                </div>
            </div>

        </div>
    }
</div>